<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_marginStart="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rank_text_view"
        app:layout_constraintTop_toTopOf="@id/card_view"
        app:layout_constraintBottom_toBottomOf="@id/card_view"
        android:textSize="36sp"
        tools:text="1"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"/>


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/rank_text_view"
        app:layout_constraintTop_toTopOf="parent"
        android:elevation="8dp"
        android:padding="8dp"
        app:cardCornerRadius="20dp"
        app:cardUseCompatPadding="true"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="12dp">

            <TextView
                android:id="@+id/name_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Bitcoin"
                android:textSize="18sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/symbol_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="BTC"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/name_text_view"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/date_added_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="02.02.2022"
                android:textSize="18sp"
                app:layout_constraintTop_toBottomOf="@id/symbol_text_view"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/price_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="55000"
                android:textSize="18sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/market_cap_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="2890709"
                android:textSize="18sp"

                app:layout_constraintTop_toBottomOf="@id/price_text_view"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/market_cap_percent_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="9082782"
                android:textSize="18sp"
                app:layout_constraintTop_toBottomOf="@id/market_cap_text_view"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>